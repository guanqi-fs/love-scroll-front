
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 0 20px;
}
.logo {
  font-size: 30px;
  font-weight: bold;
  color: #4a4a4a;
  margin-bottom: 30px;
}
.form {
  width: 100%;
}
.input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 10px;
}
.submit {
  width: 100%;
  padding: 10px;
  background-color: #007aff;
  color: #fff;
  border-radius: 5px;
  margin-bottom: 15px;
}
.link {
  color: #007aff;
  text-align: center;
}

